# Database
DATABASE_URL=postgresql+asyncpg://freefood:password@localhost:5432/freefood
DATABASE_URL_SYNC=postgresql://freefood:password@localhost:5432/freefood

# Redis
REDIS_URL=redis://localhost:6379/0

# Apify API Token (for Instagram scraping)
APIFY_API_TOKEN=your_apify_api_token_here

# Email Service (Brevo/Sendinblue)
BREVO_API_KEY=your_brevo_api_key
BREVO_FROM_EMAIL=hello@yourdomain.com
BREVO_FROM_NAME=FreeFood UCD

# AWS S3 (optional, for screenshot storage)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET=freefood-screenshots
AWS_REGION=eu-west-1

# Application
SECRET_KEY=generate-with-openssl-rand-hex-32
ADMIN_API_KEY=generate-with-openssl-rand-hex-32
ENVIRONMENT=development
LOG_LEVEL=INFO
API_V1_PREFIX=/api/v1

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Email allowlist for testing (comma-separated; leave blank to notify all users)
NOTIFICATION_TEST_EMAILS=

# Sentry error monitoring (optional)
SENTRY_DSN=
